@page "/Cellar/UserWine/{id:int}"

<PageTitle>Wine in cellar</PageTitle>

<AuthorizeView>
    <Authorized>
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h4">@_userWine.Wine.Winery.Name - @_userWine.Wine.Name</MudText>
                </CardHeaderContent>
                <CardHeaderActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" @onclick="ChangeAmount"></MudIconButton>
                </CardHeaderActions>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body1">@_userWine.Amount bottle(s) in cellar.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Button"
                           Variant="Variant.Outlined"
                           Color="Color.Primary"
                           OnClick="Back">
                    Back to cellar
                </MudButton>
            </MudCardActions>
        </MudCard>
    </Authorized>
    <NotAuthorized>
        <WineCellar.Blazor.Components.Common.NotAuthorized/>
    </NotAuthorized>
</AuthorizeView>