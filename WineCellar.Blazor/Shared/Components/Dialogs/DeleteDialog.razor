<MudDialog>
    <DialogContent>
        @if (ItemToDelete is not null)
        {
            <MudText>Do you really want to delete @ItemToDelete?</MudText>
        }
        @if (Text is not null)
        {
            <MudText>@Text</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Delete">Delete</MudButton>
    </DialogActions>
</MudDialog>