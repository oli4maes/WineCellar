<MudDialog>
    <DialogContent>
        @if (ItemToDelete is not null)
        {
            <MudText>Do you really want to delete @ItemToDelete?</MudText>
        }
        @if (Text is not null)
        {
            <MudText>@Text</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton ButtonType="ButtonType.Button"
                   Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Outlined.Cancel"
                   Color="Color.Primary"
                   OnClick="Cancel">
            Cancel
        </MudButton>
        <MudButton Class="ml-4"
                   ButtonType="ButtonType.Button"
                   Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Outlined.Delete"
                   Color="Color.Primary"
                   OnClick="Delete">
            Delete
        </MudButton>
    </DialogActions>
</MudDialog>