@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="4">
        <MudText Typo="Typo.h5" Class="mt-1">Kave</MudText>
        <MudSpacer/>
        <AuthorizeView>
            <Authorized>
                <MudItem md="4">
                    <WineSearchInput Dense="true" Margin="Margin.Dense"></WineSearchInput>
                </MudItem>
            </Authorized>
        </AuthorizeView>
        <AccessControl></AccessControl>
        <AuthorizeView Policy="AdminRole">
            <Authorized>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Edge="Edge.End" Link="/administration"/>
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" ClipMode="_clipMode">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-10 px-10">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>