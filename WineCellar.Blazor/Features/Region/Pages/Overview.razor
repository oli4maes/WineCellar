@page "/Regions"
@using WineCellar.Blazor.Shared.Components.Inputs
@using WineCellar.Blazor.Features.Region.Components

<PageTitle>Kave - Regions</PageTitle>

<MudContainer Fixed="true">
    <MudGrid>
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h4" Class="mt-4">Regions</MudText>
        </MudItem>
        <MudItem xs="12" md="6" Class="mt-1">
            <SearchInput OnSearch="SearchRegions"/>
        </MudItem>
    </MudGrid>
</MudContainer>

<MudDivider/>

<MudContainer Fixed="true">
    @if (_regions.Any())
    {
        <MudGrid Class="pt-4 d-flex align-stretch">
            @foreach (var region in _regions)
            {
                <MudItem xs="6" md="4">
                    <RegionCard Region="region" OnNavigateToRegionDetail="NavigateToRegionDetail"/>
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>