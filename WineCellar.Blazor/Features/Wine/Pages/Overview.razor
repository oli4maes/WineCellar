@page "/Wines"
@using WineCellar.Blazor.Shared.Components.Inputs
@using WineCellar.Blazor.Features.Winery.Components

<PageTitle>Kave - Wineries</PageTitle>

<MudContainer Fixed="true">
    <MudGrid>
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h4" Class="mt-4">Wines</MudText>
        </MudItem>
        <MudItem xs="12" md="6" Class="mt-1">
            <SearchInput OnSearch="SearchWines"/>
        </MudItem>
    </MudGrid>
</MudContainer>

<MudDivider/>

<MudContainer Fixed="true">
    @if (_wines.Any())
    {
        <MudGrid Class="pt-4">
            @foreach (var wine in _wines)
            {
                <MudItem xs="12" md="4">
                    <WineCard Wine="wine" 
                              ShowWinery="true"
                              OnNavigateToWineDetail="NavigateToWineDetail"
                              OnAddToCellar="AddWineToCellar"
                              OnNavigateToCellar="NavigateToCellar"/>
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>