<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">Add this wine to your cellar</MudText>
    </TitleContent>
    <DialogContent>
        <MudNumericField @bind-Value="Bottle.Amount" Label="Amount" Min="1"/>

        <MudNumericField @bind-Value="@Bottle.Vintage" Label="Vintage" Class="mt-4"/>
        
        <MudNumericField @bind-Value="@Bottle.PricePerBottle" Format="N2" Label="Price per bottle" Class="mt-4"/>

        <MudSelect T="BottleSize"
                   @bind-Value="Bottle.Size"
                   Placeholder="Select bottle size"
                   Label="Bottle size"
                   For="@(() => Bottle.Size)"
                   Class="mt-5">
            @foreach (var item in Enum.GetValues(typeof(BottleSize)))
            {
                <MudSelectItem T="BottleSize" Value="(BottleSize)item">@item</MudSelectItem>
            }
        </MudSelect>

        <MudDatePicker Label="In cellar since" @bind-Date="Bottle.AddedOn" Class="mt-4"/>
    </DialogContent>
    <DialogActions>
        <MudButton ButtonType="ButtonType.Button"
                   Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Outlined.Cancel"
                   Color="Color.Primary"
                   OnClick="Cancel"
                   Class="mt-4">
            Cancel
        </MudButton>
        <MudButton Class="ml-4 mt-4"
                   ButtonType="ButtonType.Button"
                   Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Outlined.Add"
                   Color="Color.Primary"
                   OnClick="AddBottle">
            Add to cellar
        </MudButton>
    </DialogActions>
</MudDialog>