@page "/Administration/Wineries"

<PageTitle>Kave - Administration - Wineries</PageTitle>

<AuthorizeView Policy="AdminRole">
    <Authorized>

        <MudContainer Fixed="true">
            <MudGrid>
                <MudItem md="11">
                    <MudText Typo="Typo.h4" Class="mt-3 mb-2">Wineries</MudText>
                </MudItem>
                <MudItem md="1" Class="mt-3">
                    <MudFab StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="AddWinery" Size="Size.Small"/>
                </MudItem>
            </MudGrid>
        </MudContainer>

        <MudDivider/>

        <MudContainer Fixed="true" Class="pt-4">
            <WineriesTable Wineries="_wineries" OnDeleteWinery="DeleteWinery" OnOpenWinery="OpenWinery"/>
        </MudContainer>
    </Authorized>
</AuthorizeView>