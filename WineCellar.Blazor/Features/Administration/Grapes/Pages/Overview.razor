@page "/Administration/Grapes"

<PageTitle>Kave - Administration - Grapes</PageTitle>

<AuthorizeView Policy="AdminRole">
    <Authorized>

        <MudContainer Fixed="true">
            <MudGrid>
                <MudItem md="11">
                    <MudText Typo="Typo.h4" Class="mt-3 mb-2">Grapes</MudText>
                </MudItem>
                <MudItem md="1" Class="mt-3">
                        <MudFab StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="AddGrape" Size="Size.Small"/>
                </MudItem>
            </MudGrid>
        </MudContainer>

        <MudDivider/>
        
        <MudContainer Fixed="true" Class="pt-4">
            <GrapesTable Grapes="_grapes" OnDeleteGrape="DeleteGrape" OnOpenGrape="OpenGrape"/>
        </MudContainer>
    </Authorized>
</AuthorizeView>