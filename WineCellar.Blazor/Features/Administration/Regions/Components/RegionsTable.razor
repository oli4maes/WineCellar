<MudDataGrid @ref="_dataGrid"
             MultiSelection="false"
             Items="Regions"
             Filterable="false"
             Groupable="true"
             GroupExpanded="false"
             SortMode="SortMode.Single"
             Dense="true">
    <Columns>
        <PropertyColumn Property="x => x.CountryName" Title="Country" Grouping>
            <GroupTemplate>
                <span style="font-weight: bold">@context.Grouping.Key</span>
            </GroupTemplate>
        </PropertyColumn>
        <PropertyColumn Property="x => x.Name" Title="Region" Sortable="false" Groupable="false"/>
        <TemplateColumn>
            <CellTemplate Context="RegionEditContext">
                @{
                    var region = RegionEditContext.Item;
                }
                <MudToggleIconButton Toggled="@region.IsSpotlit"
                                     ToggledChanged="() => ToggleIsSpotlit(region)"
                                     Size="Size.Small"
                                     Icon="@Icons.Material.Outlined.ExploreOff"
                                     Color="Color.Error"
                                     Title="Not spotlit"
                                     ToggledSize="Size.Small"
                                     ToggledIcon="@Icons.Material.Outlined.Explore"
                                     ToggledColor="Color.Success"
                                     ToggledTitle="Spotlit"/>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>