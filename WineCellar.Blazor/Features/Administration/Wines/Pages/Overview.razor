@page "/Administration/Wines"

<PageTitle>Kave - Administration - Wines</PageTitle>

<AuthorizeView Policy="AdminRole">
    <Authorized>

        <MudContainer Fixed="true">
            <MudGrid>
                <MudItem md="11">
                    <MudText Typo="Typo.h4" Class="mt-3 mb-2">Wines</MudText>
                </MudItem>
                <MudItem md="1" Class="mt-3">
                    <MudFab StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" OnClick="AddWine" Size="Size.Small"/>
                </MudItem>
            </MudGrid>
        </MudContainer>

        <MudDivider/>

        <MudContainer Fixed="true" Class="pt-4">
            <WinesTable Wines="_wines" OnDeleteWine="DeleteWine" OnOpenWine="OpenWine"/>
        </MudContainer>

    </Authorized>
</AuthorizeView>