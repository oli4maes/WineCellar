@using WineCellar.Blazor.Shared.Components.Chips
<MudLink OnClick="NavigateToWineDetail" Underline="Underline.None">
    <MudCard Elevation="2">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5" Class="mb-2" Color="Color.Primary">@Wine?.Name</MudText>
                @if (ShowWinery)
                {
                    <MudText Typo="Typo.h6">@Wine?.WineryName</MudText>
                }
                @if (!ShowWinery)
                {
                    <MudText Typo="Typo.h6">@Wine?.RegionName</MudText>
                }
            </CardHeaderContent>
            <CardHeaderActions>
                <WineTypeChip WineType="@Wine.WineType"/>
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            @if (Wine.IsInUserCellar)
            {
                <MudIconButton Icon="@Icons.Material.Outlined.Workspaces"
                               Color="Color.Primary"
                               Title="Wine in cellar"
                               @onclick="NavigateToCellar"/>
            }
            else
            {
                <MudIconButton Icon="@Icons.Material.Outlined.Add"
                               Color="Color.Primary"
                               Title="Add to cellar"
                               @onclick="AddToCellar"/>
            }
        </MudCardContent>
    </MudCard>
</MudLink>