@page "/Wineries/{id:int}"
@using WineCellar.Blazor.Features.Winery.Components

<PageTitle>Kave - Winery</PageTitle>

<MudContainer Fixed="true">
    <MudText Typo="Typo.h4" Class="mt-3 mb-2">@_winery?.Name</MudText>
</MudContainer>

<MudDivider/>

<MudContainer Fixed="true" Class="pt-4">
    <WineryInfo Winery="@_winery"/>
</MudContainer>

<MudDivider/>

<MudContainer Fixed="true">
    @if (_wines.Any())
    {
        <MudGrid Class="pt-4">
            @foreach (var wine in _wines)
            {
                <MudItem xs="12" md="4">
                    <WineCard Wine="wine" 
                              OnNavigateToWineDetail="NavigateToWineDetail"
                              OnAddToCellar="AddWineToCellar"
                              OnNavigateToCellar="NavigateToCellar"/>
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>