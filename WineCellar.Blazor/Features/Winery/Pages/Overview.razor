@page "/Wineries"
@using WineCellar.Blazor.Features.Winery.Components

<PageTitle>Kave - Wineries</PageTitle>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudText Typo="Typo.h3" Color="Color.Primary" Class="pb-1">Wineries</MudText>
    </MudItem>
    <MudItem xs="12" md="6">
        <WinerySearchInput OnSearchWineries="SearchWineries"/>
    </MudItem>
</MudGrid>
<MudDivider/>


@if (_wineries.Any())
{
    <MudGrid Class="pt-4 d-flex align-stretch">
        @foreach (var winery in _wineries)
        {
            <MudItem xs="12" md="6">
                <WineryCard Winery="winery" OnNavigateToWineryDetail="NavigateToWineryDetail"/>
            </MudItem>
        }
    </MudGrid>
}