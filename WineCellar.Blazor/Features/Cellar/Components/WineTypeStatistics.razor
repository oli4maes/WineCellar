<MudGrid>
    @foreach (var wineType in AmountOfBottlesPerWineType)
    {
        <MudItem xs="6" Class="mt-10">
            <MudText Typo="Typo.h5" Align="Align.Center" Color="Color.Primary">@wineType.Key</MudText>

            @if (@wineType.Value == 0)
            {
                <MudText Typo="Typo.h6" Align="Align.Center">-</MudText>
            }
            else
            {
                <MudText Typo="Typo.h6" Align="Align.Center">@wineType.Value</MudText>
            }

        </MudItem>
    }
</MudGrid>